<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="caller_call"/>

        <Button
            android:id="@+id/btn_contacter_query_type1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="contacter_query_type1"/>

        <Button
            android:id="@+id/btn_contacter_query_type2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="contacter_query_type2"/>

        <Button
            android:id="@+id/btn_contacter_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="contacter_insert"/>

        <Button
            android:id="@+id/btn_msg_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="msg_send"/>

        <Button
            android:id="@+id/btn_msg_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="msg_read"/>

        <Button
            android:id="@+id/btn_wifi_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="wifi_test"/>
    </LinearLayout>

</ScrollView>