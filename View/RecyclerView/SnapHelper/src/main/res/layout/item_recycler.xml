<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yline.view.fresco.view.FrescoView
        android:id="@+id/item_recycler_fresco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:placeholderImage="@drawable/timg"
        app:placeholderImageScaleType="center"
        app:viewAspectRatio="1" />

    <TextView
        android:id="@+id/item_recycler_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_recycler_fresco"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" />
</RelativeLayout>