<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Default" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--配合Toolbar使用-->
    <!--父类-->
    <style name="AppTheme.Delete" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--子类-->
    <style name="AppTheme.CenterTitle" parent="AppTheme.Default">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.IconBack" parent="AppTheme.Default">
        <!--子布局的,字体颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--自身的,返回键颜色-->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.RightMenu" parent="AppTheme.Default">
        <!--子布局的,字体颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--自身的,返回键颜色-->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

</resources>
