<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_simple_adapter_instance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SimpleAdapter instance"/>

    <Button
        android:id="@+id/btn_array_adapter_instance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ArrayAdapter instance"/>

    <Button
        android:id="@+id/btn_base_adapter_instance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BaseAdapter instance"/>

    <Button
        android:id="@+id/btn_common_listadapter_instance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CommonListAdapter instance"/>

    <Button
        android:id="@+id/btn_column_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ColumnsAdapter one"/>

    <Button
        android:id="@+id/btn_column_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ColumnsAdapter two"/>

    <Button
        android:id="@+id/btn_column_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ColumnsAdapter three"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_init"
            android:text="初始化"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_add_from"
            android:text="增加到来的消息"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_add_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送消息"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>