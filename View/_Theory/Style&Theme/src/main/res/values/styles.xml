<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_content_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff00ff</item>
    </style>

    <style name="text_content_style_dark" parent="@style/text_content_style">
        <item name="android:textColor">#66ff00ff</item>
        <item name="android:text">#123456</item>
    </style>
    <!--对应这 MainActivity-->
    <style name="theme_blue" parent="AppTheme">
        <item name="android:background">#00ff00</item>
    </style>
    <!--对应MineMineActivity-->
    <style name="theme_mygirl">
        <item name="android:windowBackground">@drawable/love</item>
    </style>
</resources>
