<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Click -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Click"
        android:textColor="@android:color/holo_red_light"/>

    <com.view.widget.label.widget.LabelView
        android:id="@+id/label_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/label_selector_radiuall_stroke_redgray"
                android:duplicateParentState="true"
                android:text="Breath And Life"
                android:textColor="@drawable/label_selector_color_redgray"
                android:textSize="13sp"/>
        </LinearLayout>
    </com.view.widget.label.widget.LabelView>
</LinearLayout>